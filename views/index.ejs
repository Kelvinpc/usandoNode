<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">


    <title>Inicio</title>
</head>
<body>

    <header></header>

    <main>
        <section class="container mt-3">
            <div class="card">
                <div class="card-header">
                    <a href="./create" class="btn btn-sm btn-primary">Registrar</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped w-100">
                        <thead>
                            <tr>
                                <!-- <th>ID</th> -->
                                <th>Nombre</th>
                                <th>Apellido paterno</th>
                                <th>Apellido materno</th>
                                <th>Edad</th>
                                <th>DNI</th>
                                <th>Telefono</th>
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% registros.forEach(persona => { %>
                             <tr>
                                <!-- <td><%= persona.id %></td> -->
                                <td><%= persona.nombre %></td>
                                <td><%= persona.apellido_PAT %></td>
                                <td><%= persona.apellido_MAT %></td>
                                <td><%= persona.edad %></td>
                                <td><%= persona.dni %></td>
                                <td><%= persona.telefono %></td>
                                <td>
                                    <a href="./edit/<%= persona.id %>" class="btn btn-sm btn-info">Editar</a>
                                    <a href="./delete/<%= persona.id %>" class="btn btn-sm btn-danger delete">Eliminar</a>
                                </td>
                             </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </main>
    

    <footer></footer>


    <script>
        document.addEventListener("DOMContentLoaded",() => {
          const lnkEliminar = document.querySelectorAll(".delete");
    
          lnkEliminar.forEach(enlace => {
            enlace.addEventListener("click", (event) => {
              event.preventDefault();
    
              if(confirm("¿Está seguri de eliminar?")){
                window.location.href = event.target.getAttribute('href');
              }
    
            });
            
          });
    
        })
      </script>
    
    
</body>
</html>


